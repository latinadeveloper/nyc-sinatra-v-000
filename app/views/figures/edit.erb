<form action="/figures/<%=@figure.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

New Figure<br>
<label for="figure_name">Figure Name</label>
<input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">

<br>

checklist titles<br>
<%Title.all.each do |title|%>
  <label ><%= title.name%></label>
  <input type="checkbox" id="title_<%=title.id%>"
  name="figure[title_ids][]" value="<%=title.id%>"
  <% if @figure.titles.include?(title)  %>
  checked <%end%> />
  <br>
<%end%>

<br>
  landmark<br>
  <%Landmark.all.each do |landmark|%>
    <label ><%= landmark.name%></label>
    <input type="checkbox" id="landmark_<%=landmark.id%>"
     name="figure[landmark_ids][]" value="<%=landmark.id%>"
     <% if @figure.landmarks.include?(landmark)  %>
      checked <%end %>/>
      <br>
    <%end%>



<br>
<label for="new_landmark">New Landmark</label>
<input id="new_landmark" type="text" name="landmark[name]"

<label for="new_title">Title Name</label>
<input id="new_title" type="text" name="title[name]">

<input type="submit" value="Edit Figure">
<br>

<a href="/figures">figure list</a>
</form>
